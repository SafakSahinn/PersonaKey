@model IEnumerable<PersonaKey.EntityLayer.Concrete.Role>

@{
    ViewData["Title"] = "Roller";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Rol Ekle</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@role.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    @* İsteğe bağlı silme butonu: *@
                    @* <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-danger">Sil</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
