@model PersonaKey.EntityLayer.Concrete.Department

@{
    ViewData["Title"] = "Yeni Departman Ekle";
}

<div class="bg-white rounded-lg shadow p-4 max-w-full overflow-auto">

    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Departman Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
