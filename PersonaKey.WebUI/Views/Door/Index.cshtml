@model IEnumerable<PersonaKey.EntityLayer.Concrete.Door>

@{
    ViewData["Title"] = "Kapılar";
}

<div class="bg-white rounded-lg shadow p-4 max-w-full overflow-auto">

    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary mb-3">Yeni Kapı Ekle</a>
    </p>

    <table class="table table-striped mb-0">
        <thead>
            <tr>
                <th>Kapı Ad</th>
                <th>MAC Adresi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.MacAddress</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a href="#" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>