@model IEnumerable<PersonaKey.EntityLayer.Concrete.Door>

@{
    ViewData["Title"] = "Kapılar";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Kapı Ekle</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>MAC Adresi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.MacAddress</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
