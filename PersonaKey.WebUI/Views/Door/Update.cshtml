@model PersonaKey.EntityLayer.Concrete.Door

@{
    ViewData["Title"] = "Kapı Güncelle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Name">Kapı Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MacAddress">MAC Adresi</label>
        <input asp-for="MacAddress" class="form-control" />
        <span asp-validation-for="MacAddress" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
