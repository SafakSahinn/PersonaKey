@model PersonaKey.EntityLayer.Concrete.Door

@{
    ViewData["Title"] = "Kapı Güncelle";
}

<div class="bg-white rounded-lg shadow p-4 max-w-full overflow-auto">

    <h2>@ViewData["Title"]</h2>

    <form asp-action="Update" method="post">
        <div class="form-group">
            <label asp-for="Name">Kapı Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MacAddress">MAC Adresi</label>
            <input asp-for="MacAddress" class="form-control" />
            <span asp-validation-for="MacAddress" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-warning">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
