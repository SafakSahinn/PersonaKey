@model PersonaKey.EntityLayer.Concrete.Person

@{
    ViewData["Title"] = "Yeni Personel Ekle";
}

<div class="bg-white rounded-lg shadow p-4 max-w-full overflow-auto">

    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            @Html.LabelFor(model => model.FullName, "Ad Soyad")
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, "Email")
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentId, "Departman")
            <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))">
                <option value="">Seçiniz</option>
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RoleId, "Rol")
            <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(ViewBag.Roles, "Id", "Name"))">
                <option value="">Seçiniz</option>
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
