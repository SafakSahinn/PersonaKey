@model PersonaKey.EntityLayer.Concrete.Permission

@{
    ViewData["Title"] = "Yeni İzin Ekle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="RoleId" class="control-label">Rol</label>
        <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control">
            <option value="">-- Rol Seçiniz --</option>
        </select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoorId" class="control-label">Kapı</label>
        <select asp-for="DoorId" asp-items="ViewBag.Doors" class="form-control">
            <option value="">-- Kapı Seçiniz --</option>
        </select>
        <span asp-validation-for="DoorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
