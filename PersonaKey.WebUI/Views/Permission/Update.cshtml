@model PersonaKey.EntityLayer.Concrete.Permission

@{
    ViewData["Title"] = "İzin Güncelle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="RoleId">Rol</label>
        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
            <option value="">-- Rol Seçin --</option>
        </select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoorId">Kapı</label>
        <select asp-for="DoorId" class="form-control" asp-items="ViewBag.Doors">
            <option value="">-- Kapı Seçin --</option>
        </select>
        <span asp-validation-for="DoorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
